* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  --primary-blue: #3498db;
  --light-blue: #5dade2;
  --dark-blue: #2980b9;
  --bg-dark: #1a2332;
  --bg-medium: #2d3e50;
  --bg-light: #34495e;
  --text-light: #ecf0f1;
  gap: 0.5rem;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.75rem 1rem;
  background: rgba(52, 152, 219, 0.05);
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  border: 1px solid transparent;
}

.category-item:hover,
.category-item.active {
  background: rgba(52, 152, 219, 0.15);
  border-color: var(--primary-blue);
}

.category-name {
  font-size: 0.9rem;
  color: var(--text-light);
}

.category-count {
  font-size: 0.85rem;
  color: var(--text-muted);
  background: rgba(52, 152, 219, 0.2);
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
}

/* Main Content */
.main-content {
  flex: 1;
  padding: 2rem;
  min-width: 0;
  max-width: 1200px;
}

/* Blog Styles */
.blog-header {
  text-align: center;
  margin-bottom: 3rem;
}

.blog-header h1 {
  font-size: 3rem;
  color: var(--text-light);
  margin-bottom: 0.5rem;
  background: linear-gradient(135deg, var(--primary-blue), var(--light-blue));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.blog-header p {
  color: var(--text-muted);
  font-size: 1.1rem;
}

.search-container {
  margin-bottom: 2rem;
}

.search-bar {
  width: 100%;
  padding: 1rem 1.5rem;
  background: rgba(45, 62, 80, 0.6);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  color: var(--text-light);
  font-size: 1rem;
  transition: all 0.3s ease;
}

.search-bar:focus {
  outline: none;
  border-color: var(--primary-blue);
  box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
}

.search-bar::placeholder {
  color: var(--text-muted);
}

.blog-grid {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

/* Page Title */
.page-title {
  text-align: center;
  margin-bottom: 2rem;
}

.page-title h1 {
  font-size: 2.5rem;
  color: var(--text-light);
  margin-bottom: 0.5rem;
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(135deg, var(--primary-blue), var(--light-blue));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.page-title .subtitle {
  color: var(--text-muted);
  font-size: 1rem;
}

/* Search Input */
.search-input {
  width: 100%;
  padding: 1rem 1.5rem;
  background: rgba(45, 62, 80, 0.6);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  color: var(--text-light);
  font-size: 1rem;
  transition: all 0.3s ease;
}

.search-input:focus {
  outline: none;
  border-color: var(--primary-blue);
  box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
}

.search-input::placeholder {
  color: var(--text-muted);
}

/* No Results */
.no-results {
  text-align: center;
  padding: 4rem 2rem;
  color: var(--text-muted);
}

.no-results h2 {
  font-size: 2rem;
  color: var(--text-light);
  margin-bottom: 1rem;
}

.blog-card {
  display: flex;
  gap: 1.5rem;
  background: rgba(45, 62, 80, 0.6);
  border-radius: 16px;
  overflow: hidden;
  border: 1px solid var(--border-color);
  transition: all 0.3s ease;
  cursor: pointer;
}

.blog-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-blue);
}

.blog-card-thumbnail {
  width: 200px;
  height: 140px;
  object-fit: cover;
  flex-shrink: 0;
}

.blog-card-content {
  flex: 1;
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.blog-card-title {
  font-size: 1.5rem;
  color: var(--text-light);
  margin-bottom: 0.5rem;
  font-family: 'Poppins', sans-serif;
}

.blog-card-excerpt {
  color: var(--text-muted);
  font-size: 0.95rem;
  line-height: 1.6;
  margin-bottom: 1rem;
}

.blog-card-meta {
  display: flex;
  gap: 1rem;
  font-size: 0.85rem;
  color: var(--text-muted);
  margin-bottom: 0.75rem;
}

.blog-card-tags {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.blog-card-tag {
  background: rgba(52, 152, 219, 0.2);
  color: var(--primary-blue);
  padding: 0.25rem 0.75rem;
  border-radius: 12px;
  font-size: 0.8rem;
}

/* Blog Post */
.post-container {
  max-width: 900px;
  margin: 0 auto;
  padding: 2rem;
}

.post-header {
  text-align: center;
  margin-bottom: 3rem;
  padding-bottom: 2rem;
  border-bottom: 2px solid var(--border-color);
}

.post-title {
  font-size: 3rem;
  color: var(--text-light);
  margin-bottom: 1rem;
}

.post-meta {
  display: flex;
  justify-content: center;
  gap: 2rem;
  color: var(--text-muted);
  font-size: 0.95rem;
}

.post-content {
  font-size: 1.1rem;
  line-height: 1.8;
  color: var(--text-light);
}

.post-content h1,
.post-content h2,
.post-content h3 {
  margin-top: 2rem;
  margin-bottom: 1rem;
  color: var(--primary-blue);
}

.post-content p {
  margin-bottom: 1.5rem;
}

.post-content code {
  background: rgba(52, 152, 219, 0.1);
  padding: 0.2rem 0.4rem;
  border-radius: 4px;
  font-family: 'Courier New', monospace;
  font-size: 0.9em;
}

.post-content pre {
  background: rgba(26, 35, 50, 0.8);
  padding: 1.5rem;
  border-radius: 8px;
  overflow-x: auto;
  margin-bottom: 1.5rem;
  border: 1px solid var(--border-color);
}

.post-content pre code {
  background: none;
  padding: 0;
}

.post-content img {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  margin: 2rem 0;
}

.post-content a {
  color: var(--primary-blue);
  border-bottom: 1px solid transparent;
  transition: border-color 0.3s ease;
}

.post-content a:hover {
  border-bottom-color: var(--primary-blue);
}

/* Projects Page */
.projects-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 2rem;
  min-height: 100vh;
}

.projects-hero {
  text-align: center;
  margin-bottom: 3rem;
  padding: 2rem 0;
}

.projects-hero h2 {
  font-size: 3rem;
  color: var(--text-light);
  margin-bottom: 0.5rem;
  font-family: 'Poppins', sans-serif;
}

.projects-hero .subtitle {
  color: var(--text-muted);
  font-size: 1.1rem;
}

.loading {
  text-align: center;
  padding: 3rem;
  color: var(--text-muted);
}

.spinner {
  border: 4px solid rgba(52, 152, 219, 0.1);
  border-top: 4px solid var(--primary-blue);
  border-radius: 50%;
  width: 50px;
  height: 50px;
  animation: spin 1s linear infinite;
  margin: 0 auto 1rem;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.error-message {
  text-align: center;
  padding: 3rem;
  color: #e74c3c;
  font-size: 1.1rem;
}

.projects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 2rem;
}

.project-card {
  background: rgba(45, 62, 80, 0.6);
  border-radius: 16px;
  padding: 2rem;
  border: 1px solid var(--border-color);
  transition: all 0.3s ease;
  opacity: 0;
  animation: fadeInUp 0.6s ease forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.project-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-blue);
}

.project-header {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
}

.project-icon {
  font-size: 1.5rem;
}

.project-title {
  font-size: 1.3rem;
  color: var(--primary-blue);
  font-weight: 600;
}

.project-title:hover {
  text-decoration: underline;
}

.project-description {
  color: var(--text-muted);
  margin-bottom: 1.5rem;
  line-height: 1.6;
}

.project-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 1rem;
  border-top: 1px solid var(--border-color);
}

.project-language {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--text-light);
  font-size: 0.9rem;
}

.language-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
}

.project-stats {
  display: flex;
  gap: 1rem;
  color: var(--text-muted);
  font-size: 0.9rem;
}

/* Collection Page */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  z-index: -1;
  opacity: 0.4;
}

.sakura-video {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  pointer-events: none;
  z-index: 0;
  opacity: 0.3;
  filter: brightness(1.2);
}

.logo-image {
  max-width: 350px;
  width: 80%;
  height: auto;
  animation: fadeIn 1s ease-out;
  filter: drop-shadow(0 0 10px rgba(52, 152, 219, 0.3));
  transition: all 0.4s ease;
  cursor: pointer;
}

.logo-image:hover {
  filter: drop-shadow(0 0 30px rgba(52, 152, 219, 0.8)) drop-shadow(0 0 50px rgba(93, 173, 226, 0.6)) brightness(1.2);
  transform: scale(1.05);
}

.gallery-container {
  max-width: 1200px;
  margin: auto;
  padding: 2rem;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 1.5rem;
  position: relative;
  z-index: 10;
}

.image-card {
  border: 1px solid #2d3e50;
  border-radius: 12px;
  overflow: hidden;
  background: #1a2332;
  box-shadow: 0 4px 15px rgba(52, 152, 219, 0.15);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 0.6s ease-out forwards;
  display: flex;
  flex-direction: column;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.image-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 8px 30px rgba(52, 152, 219, 0.3);
  border-color: #5dade2;
}

.image-card img {
  width: 100%;
  height: 300px;
  display: block;
  object-fit: contain;
  object-position: center;
  background: #fafafa;
  transition: transform 0.4s ease;
}

.image-card:hover img {
  transform: scale(1.05);
}

.image-card p {
  font-family: 'Poppins', sans-serif;
  padding: 0.75rem;
  font-size: 0.85rem;
  font-weight: 300;
  text-align: center;
  background: linear-gradient(to bottom, #2d3e50, #34495e);
  margin: 0;
  color: #aaa;
  transition: background 0.3s ease;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 50px;
}

.image-card:hover p {
  background: linear-gradient(to bottom, #34495e, #3d5a75);
}

/* Collection Page */
.collection-container {
  position: relative;
  min-height: 100vh;
  overflow: hidden;
}

.video-background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: -1;
  opacity: 0.3;
}

.collection-content {
  position: relative;
  z-index: 1;
  padding: 2rem;
}

.collection-header {
  text-align: center;
  margin-bottom: 3rem;
}

.collection-logo {
  width: 150px;
  height: auto;
  margin-bottom: 1rem;
  transition: transform 0.3s ease;
}

.collection-logo:hover {
  transform: scale(1.05);
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 2rem;
  margin-bottom: 3rem;
}

.image-item {
  border-radius: 12px;
  overflow: hidden;
  box-shadow: var(--shadow);
  transition: all 0.3s ease;
  cursor: pointer;
}

.image-item:hover {
  transform: scale(1.05);
  box-shadow: var(--shadow-lg);
}

.image-item img {
  width: 100%;
  height: auto;
  display: block;
}

.volume-separator {
  text-align: center;
  margin: 4rem 0;
  padding: 2rem 0;
  border-top: 2px solid var(--border-color);
  border-bottom: 2px solid var(--border-color);
}

.volume-separator h2 {
  font-size: 2rem;
  color: var(--primary-blue);
}

/* Hero Section */
.hero {
  min-height: calc(100vh - 80px);
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 4rem 2rem;
  position: relative;
}

.hero-content {
  max-width: 800px;
}

.hero h1 {
  font-size: 4rem;
  margin-bottom: 1rem;
  background: linear-gradient(135deg, var(--primary-blue), var(--light-blue));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.subtitle {
  font-size: 1.5rem;
  color: var(--text-muted);
  margin-bottom: 3rem;
}

.typing-text {
  font-size: 1.2rem;
  color: var(--primary-blue);
  min-height: 1.5em;
}

.cta-buttons {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
}

.btn {
  padding: 1rem 2rem;
  border-radius: 8px;
  font-weight: 600;
  transition: all 0.3s ease;
  cursor: pointer;
  border: none;
  font-size: 1rem;
}

.btn-primary {
  background: var(--primary-blue);
  color: white;
}

.btn-primary:hover {
  background: var(--dark-blue);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.btn-secondary {
  background: transparent;
  color: var(--primary-blue);
  border: 2px solid var(--primary-blue);
}

.btn-secondary:hover {
  background: var(--primary-blue);
  color: white;
}

/* Skills Section */
.skills-section {
  padding: 4rem 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.skills-section h2 {
  text-align: center;
  font-size: 2.5rem;
  margin-bottom: 3rem;
  color: var(--text-light);
}

.skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

.skill-card {
  background: rgba(45, 62, 80, 0.6);
  padding: 2rem;
  border-radius: 16px;
  border: 1px solid var(--border-color);
  transition: all 0.3s ease;
}

.skill-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-blue);
}

.skill-card h3 {
  color: var(--primary-blue);
  margin-bottom: 1rem;
}

.skill-card ul {
  list-style: none;
}

.skill-card li {
  padding: 0.5rem 0;
  color: var(--text-muted);
  position: relative;
  padding-left: 1.5rem;
}

.skill-card li::before {
  content: 'â–¹';
  position: absolute;
  left: 0;
  color: var(--primary-blue);
}

/* Responsive */
@media (max-width: 1400px) {
  .page-container {
    padding-top: 80px;
  }
}

@media (max-width: 1024px) {
  .sidebar-left {
    width: 250px;
    min-width: 250px;
    padding: 1.5rem 1rem;
  }

  .profile-avatar {
    width: 80px;
    height: 80px;
  }

  .profile-card {
    padding: 1.5rem;
  }

  .main-content {
    padding: 1.5rem;
  }
}

@media (max-width: 768px) {
  .page-container {
    flex-direction: column;
  }

  .sidebar-left {
    position: relative;
    top: 0;
    width: 100%;
    min-width: 100%;
    height: auto;
    border-right: none;
    border-bottom: 1px solid var(--border-color);
  }

  .main-content {
    width: 100%;
    padding: 1rem;
  }

  .hero h1 {
    font-size: 2.5rem;
  }

  .subtitle {
    font-size: 1.2rem;
  }

  .hero-text h2 {
    font-size: 2rem;
  }

  .hero-text p {
    font-size: 1rem;
  }

  .about-flex {
    flex-direction: column;
  }

  .about-video {
    width: 100%;
    max-width: 400px;
  }

  .blog-card {
    flex-direction: column;
  }

  .blog-card-thumbnail {
    width: 100%;
    height: 200px;
  }

  .page-title h1 {
    font-size: 2rem;
  }

  .page-title .subtitle {
    font-size: 0.9rem;
  }

  .profile-name {
    font-size: 1.2rem;
  }

  .sidebar-nav-item {
    padding: 0.6rem 0.8rem;
  }

  .projects-grid {
    grid-template-columns: 1fr;
  }

  .image-grid {
    grid-template-columns: 1fr;
  }

  .nav {
    gap: 1rem;
  }

  .nav-link {
    padding: 0.5rem;
    font-size: 0.9rem;
  }

  .site-header nav {
    gap: 10px;
  }

  .site-header .container {
    padding: 1rem;
  }

  .site-header .logo {
    font-size: 1.3rem;
  }

  .project-grid {
    flex-direction: column;
  }

  .card {
    max-width: 100%;
  }
}

@media (max-width: 480px) {
  .page-title h1 {
    font-size: 1.8rem;
  }

  .blog-card-content {
    padding: 1rem;
  }

  .blog-card-title {
    font-size: 1.2rem;
  }

  .post-title {
    font-size: 2rem;
  }

  .hero-text h2 {
    font-size: 1.5rem;
  }

  .search-input {
    padding: 0.8rem 1rem;
    font-size: 0.95rem;
  }
}